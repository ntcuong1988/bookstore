{
  "name": "example/bookstore",
  "description": "Advanced Bookstore PHP app (XAMPP + MySQL) with auth, admin CRUD, search, API, tests, CI.",
  "type": "project",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "codeception/codeception": "^5.1",
    "codeception/module-phpbrowser": "^3.0.2",
    "codeception/module-asserts": "^3.0",
    "codeception/phpbuiltinserver": "*",
    "codeception/module-rest": "^3.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "test": [
      "powershell -Command \"Start-Process php -ArgumentList '-S','localhost:8001','-t','public' -WindowStyle Hidden\"",
      "powershell -Command \"Start-Sleep -Seconds 2\"",
      "vendor\\bin\\codecept build",
      "powershell -Command \"$env:APP_ENV='test'; vendor\\bin\\phpunit --testdox\"",
      "powershell -Command \"$env:APP_ENV='test'; vendor\\bin\\codecept run acceptance\"",
      "powershell -Command \"Get-Process php | Where-Object { $_.Path -like '*php*' } | Stop-Process -Force\""
    ],
    "test:unit": "vendor\\bin\\phpunit --testdox",
    "test:acceptance": [
      "powershell -Command \"Start-Process php -ArgumentList '-S','localhost:8001','-t','public' -WindowStyle Hidden\"",
      "powershell -Command \"Start-Sleep -Seconds 2\"",
      "vendor\\bin\\codecept build",
      "powershell -Command \"$env:APP_ENV='test'; vendor\\bin\\codecept run acceptance\"",
      "powershell -Command \"Get-Process php | Where-Object { $_.Path -like '*php*' } | Stop-Process -Force\""
    ]
  }
}
